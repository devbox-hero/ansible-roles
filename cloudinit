#cloud-config

write_files:
  - path: /root/install.sh
    permissions: '0755'
    content: |
      #!/bin/bash

      export HOME=/root

      sudo apt-get update -y && sudo apt-get install \
          ansible -y

      git clone https://github.com/devbox-hero/ansible-roles.git /root/ansible-roles

      cd /root/ansible-roles/

      cat > /root/ansible-roles/config.cfg << EOL
      ---
      user: andrei
      domain_name: andrei.devboxhero.com
      letsencrypt_email: lusu777@gmail.com
      password: password
      authorized_key : ssh-rsa  andrei@housemeerkat.com

      users:
        - "{{ user }}"

      symlink_vscode: True
      provider: local

      unattended_reboot:
        enabled: false
        time: 06:00
      EOL

      cd /root/ansible-roles && ansible-playbook main.vnc.yml

runcmd:
  - /bin/bash -c '/root/install.sh'
